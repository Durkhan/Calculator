<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="35sp"
            android:layout_weight="0.9"
            android:text="0"
            android:layout_gravity="right|center"
            android:id="@+id/result"
            />






    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardPreventCornerOverlap="false"
        android:layout_weight="1.2"
        app:cardBackgroundColor="#1AFFFFFF"
        app:cardCornerRadius="40dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:weightSum="5"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="30dp">
            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="AC"
                            android:id="@+id/ac"
                            android:clickable="true"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:onClick="eventNumber"
                            android:background="#66000000"
                            android:textColor="#43A047"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text=")"
                            android:onClick="eventNumber"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:id="@+id/closebrakcet"
                            android:background="#66000000"
                            android:textColor="#43A047"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="("
                            android:onClick="eventNumber"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:id="@+id/openbrakcet"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#43A047"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text=":"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:id="@+id/divide"
                            android:onClick="eventOperator"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#E53935"
                            android:layout_gravity="center" />

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="7"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:id="@+id/seven"
                            android:onClick="eventNumber"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="8"
                            android:onClick="eventNumber"
                            android:id="@+id/eigth"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:clickable="true"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:onClick="eventNumber"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:id="@+id/nine"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="x"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:id="@+id/multiply"
                            android:clickable="true"
                            android:onClick="eventOperator"
                            android:background="#66000000"
                            android:textColor="#E53935"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="4"
                            android:id="@+id/four"
                            android:onClick="eventNumber"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:onClick="eventNumber"
                            android:id="@+id/five"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="6"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:background="#66000000"
                            android:clickable="true"
                            android:onClick="eventNumber"
                            android:id="@+id/six"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="-"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:onClick="eventOperator"
                            android:id="@+id/substract"
                            android:background="#66000000"
                            android:textColor="#E53935"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:onClick="eventNumber"
                            android:id="@+id/one"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="2"
                            android:clickable="true"
                            android:id="@+id/two"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:onClick="eventNumber"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="3"
                            android:id="@+id/three"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:onClick="eventNumber"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="+"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:id="@id/add"
                            android:onClick="eventOperator"
                            android:textSize="16sp"
                            android:background="#66000000"
                            android:textColor="#E53935"
                            android:layout_gravity="center"
                             />

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="↶"
                            android:onClick="eventNumber"
                            android:id="@+id/delete"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="0"
                            android:clickable="true"
                            android:id="@+id/zero"
                            android:onClick="eventNumber"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:background="#66000000"
                            android:textColor="#fff"
                            android:layout_gravity="center" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="."
                            android:clickable="true"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:onClick="eventNumber"
                            android:id="@+id/point"
                            android:background="#66000000"
                            android:textColor="#fff"
                             android:layout_gravity="center" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="="
                            android:onClick="eventEqual"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:id="@+id/equal"
                            android:background="#66000000"
                            android:textColor="#E53935"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>